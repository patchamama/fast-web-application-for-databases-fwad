<?xml version="1.0"?>
<Main>
  <connection>
    <inc>cocktails/db.xml</inc>
  </connection>
  <configuration>
    <lang value="es">Espa%F1ol</lang>
    <lang value="en">English</lang>
  </configuration>
  <tables>
    <table name="ingredientes" fieldid="ID" id="ID" pk="ID" autonumeric="ID:GEN_ingredientesId"/>
  </tables>
  <searchs lang="es">
    <sql tableid="ingredientes" fieldid="ID" msg="Ingredientes%3A" id="ID" desc="Nombre" orderby="Nombre">select+%2A+from+ingredientes+</sql>
  </searchs>
  <elements lang="es">
    <section type="textbox">Ingredientes</section>
    <element type="hidden" table="ingredientes" field="ID"/>
    <element type="textbox" table="ingredientes" field="Nombre" len="100" lenedit="100" mandatory="true" br="true">Nombre%3A</element>
    <element type="combobox" table="ingredientes" field="Tipo" sql="select+%2A+from+ingrediente_tipos+" id="Id" desc="Desc">Tipo%3A</element>
    <element type="textbox" table="ingredientes" field="Unidad" len="30">Unidad%3A</element>
    <element type="textbox" table="ingredientes" field="Imagen" len="50" lenedit="50">Imagen%3A</element>
    <element type="memo" table="ingredientes" field="Comentario" len="100" lines="10">Comentarios%3A</element>
  </elements>
</Main>